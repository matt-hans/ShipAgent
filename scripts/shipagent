#!/usr/bin/env bash

set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$ROOT_DIR"

if ! command -v docker >/dev/null 2>&1; then
  echo "docker is required but not found in PATH."
  exit 1
fi

if ! docker compose version >/dev/null 2>&1; then
  echo "docker compose v2 is required."
  exit 1
fi

if ! docker compose ps --status running --services 2>/dev/null | grep -qx "shipagent"; then
  echo "ShipAgent container is not running."
  echo "Start it with: docker compose up -d --build"
  exit 1
fi

exec_args=()
if [[ ! -t 0 || ! -t 1 ]]; then
  exec_args+=("-T")
fi

if [[ $# -eq 0 ]]; then
  set -- --help
fi

exec docker compose exec "${exec_args[@]}" shipagent shipagent "$@"

